<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kelin.archetype.common.mapper.biz.BizAccountMapper">

    <sql id="columns">
        id,account,password,token
    </sql>

    <update id="updateToken">
        UPDATE
            biz_account
        SET
            token = #{token}
        WHERE
            id = #{id}
    </update>

    <select id="findByAccount" resultType="com.kelin.archetype.common.entity.biz.BizAccount">
        SELECT
            <include refid="columns"/>
        FROM
            biz_account
        WHERE
            account = #{account}
    </select>
</mapper>
