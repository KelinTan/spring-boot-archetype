<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kelin.archetype.common.mapper.primary.UserMapper">

    <sql id="columns">
        id,user_name
    </sql>

    <select id="findByName" resultType="com.kelin.archetype.common.entity.primary.User">
        SELECT
            <include refid="columns"/>
        FROM
            user
        WHERE
            user_name = #{name}
    </select>
</mapper>
